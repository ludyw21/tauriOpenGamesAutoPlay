{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "log:default",
    "os:default",
    "window-state:default",
    "dialog:default",
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        "**"
      ]
    },
    {
      "identifier": "fs:allow-open",
      "allow": [
        "**"
      ]
    },
    {
      "identifier": "fs:allow-read",
      "allow": [
        "**"
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        "**"
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        "**"
      ]
    },
    {
      "identifier": "fs:allow-appdata-read",
      "allow": [
        "*"
      ]
    },
    {
      "identifier": "fs:allow-appdata-read-recursive",
      "allow": [
        "*"
      ]
    },
    {
      "identifier": "fs:allow-create",
      "allow": [
        "**"
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        "**"
      ]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [
        "**"
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        "**"
      ]
    },
    {
      "identifier": "fs:allow-appdata-write",
      "allow": [
        "*"
      ]
    },
    {
      "identifier": "fs:allow-appdata-write-recursive",
      "allow": [
        "*"
      ]
    },
    "core:window:allow-set-always-on-top",
    "core:window:allow-is-always-on-top",
    "global-shortcut:default",
    "global-shortcut:allow-is-registered",
    "global-shortcut:allow-register",
    "global-shortcut:allow-register-all",
    "global-shortcut:allow-unregister",
    "global-shortcut:allow-unregister-all"
  ]
}
